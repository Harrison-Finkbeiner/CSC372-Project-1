<h1> Add Recipe </h1>
<%= form_for :recipe, url: recipes_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :ingredients %><br>
    <%= f.text_area :ingredients %>
  </p>

  <p>
    <%= f.label :steps %><br>
    <%= f.text_area :steps %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
